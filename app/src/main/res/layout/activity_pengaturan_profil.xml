<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".PengaturanProfilActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textViewJudulPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="Pengaturan Profil"
                android:textColor="@color/tema_aplikasi"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewPengaturan"
                android:layout_width="111dp"
                android:layout_height="129dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewJudulPengaturan"
                app:srcCompat="@drawable/kandang" />

            <TextView
                android:id="@+id/textViewNamaTernak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="@string/tes"
                android:textColor="@color/tema_aplikasi3"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewPengaturan"
                app:layout_constraintTop_toBottomOf="@+id/textViewJudulPengaturan" />

            <TextView
                android:id="@+id/textViewLokasiTernak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="@string/tes"
                android:textColor="@color/tema_aplikasi3"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewPengaturan"
                app:layout_constraintTop_toBottomOf="@+id/textViewNamaTernak" />

            <ImageView
                android:id="@+id/imageViewEditTernak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/costum_ic_edit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>